bround(n)
  -moz-border-radius: n
  -webkit-border-radius: n

body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

div.content
  width: 900px
  margin: auto

div.header
  width: 900px
  .title
    float: left
    width: 200px
  .search-bar
    width: 650px
    height: 47px
    float:right
    background: #B6FAD8
    padding: 25px 20px 25px 20px
    bround(10px)

.search-bar > input
  width: 550px
  height: 45px
  color: white
  background: #272D38
  font-size: 20px
  padding-left: 10px
  border: none
  bround(10px)

.search-bar > span
  background: #272D38
  padding: 5px 10px 5px 10px
  margin-left: 20px
  color: white
  font-size: 31px
  bround(10px)
  cursor: pointer
  &:hover
    background: #497A6A
  &:active
    background: white
    color: #497A6A

div.tooltip-header
  position: absolute
  top: 153px
